<div id="genres-link" class="col-lg-12 dash-col">
    <header>
      <h3>GENRES - <span class="info">Hover words to magnify</h3>
    </header>
    <div id="city-genres">
      <span id="toggleZoomer">
        <p id="toggle-instructions">Disable magnifying glass to interact with the genres</p>
        <p class="genre-btn" id="disableZoom" onclick="disableZoomer()">Disable Magnifier</p>
        <p class="genre-btn" id="enableZoom" onclick="enableZoomer()">Enable Magnifier</p>
      </span>
    </div>
    <div id="sub-genres">
        <p class="genre-btn" onclick="backToGenres()">Back to Genres</p>
    </div>
</div>
