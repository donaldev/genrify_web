<div id="artist-link" class="col-md-12 dash-col">
  <header>
    <h3>Artists <i class="fa fa-info-circle pull-right" aria-hidden="true" data-toggle="modal" data-target="#artistsModal"></i></h3>
  </header>
  <div id="carousel-dots"></div>
  <div id="carousel-slider">
  </div>
</div

<!-- Modal -->
<div class="modal fade" id="artistsModal" tabindex="-1" role="dialog" aria-labelledby="introModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                 <h2 class="modal-title" id="introModalLabel">Track Availability</h2>

            </div>
            <div class="modal-body">
                <p>The carousel for this feature shows: </p>
                <ul>
                  <li>The artists in this particular playlist</li>
                  <li>The number of tracks they have featured in the playlist</li>
                  <li>The name of those tracks</li>
                </ul>
                <h4>Main Feature</h4>
                <p>Click on one of the track names to see where in the world that track is available on Spotify</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Got it</button>
            </div>
        </div>
    </div>
</div>
